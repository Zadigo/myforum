{
    // Required in vscode-eslint < v3.0.10 only
    "eslint.useFlatConfig": true,
    "tailwindCSS.experimental.classRegex": [
        [
            "cva\\(((?:[^()]|\\([^()]*\\))*)\\)",
            "[\"'`]([^\"'`]*).*?[\"'`]"
        ],
        [
            "cx\\(((?:[^()]|\\([^()]*\\))*)\\)",
            "(?:'|\"|`)([^']*)(?:'|\"|`)"
        ]
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.unusedImports": "explicit",
            "source.sortImports": "explicit"
        }
    }
}
